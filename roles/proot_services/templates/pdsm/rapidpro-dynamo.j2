#!/bin/sh
# /usr/local/pdsm/services-available/rapidpro-dynamo
# PDSM service wrapper for RapidPro Dynalite
# FIXED: Uses direct binary execution via screen + explicit IPv4 binding

PDSM_COMMON="/usr/local/pdsm/lib/pdsm-common.sh"
[ -r "$PDSM_COMMON" ] && . "$PDSM_COMMON"

SERVICE_NAME="rapidpro-dynamo"
PIDFILE="/run/rapidpro/dynamo.pid"
LOGFILE="/var/log/rapidpro/dynamo.log"

mkdir -p /run/rapidpro
mkdir -p /var/log/rapidpro
mkdir -p {{ rapidpro_dir }}/dynamo
# Ensure extensive ownership fix
chown -R {{ iiab_admin_user }}:{{ iiab_admin_user }} /var/log/rapidpro /run/rapidpro {{ rapidpro_dir }}/dynamo 2>/dev/null || true

running() {
  if screen -list | grep -q "\.$SERVICE_NAME"; then
      return 0
  fi
  [ -s "$PIDFILE" ] || return 1
  pid="$(cat "$PIDFILE" 2>/dev/null)"
  [ -n "$pid" ] || return 1
  kill -0 "$pid" 2>/dev/null
}

start() {
  if running; then
    echo "[pdsm:$SERVICE_NAME] already running"
    return 0
  fi

  echo "[pdsm:$SERVICE_NAME] starting..."
  
  # Cleanup attempt
  pkill -f "dynalite" >/dev/null 2>&1 || true
  rm -f "$PIDFILE"
  chown {{ iiab_admin_user }}:{{ iiab_admin_user }} "$LOGFILE" 2>/dev/null || true

  # VM-Style Direct Binary Execution
  DYNALITE_BIN="{{ rapidpro_dir }}/node_modules/.bin/dynalite"
  if [ ! -x "$DYNALITE_BIN" ]; then
      echo "[pdsm:$SERVICE_NAME] Error: $DYNALITE_BIN not found" >&2
      return 1
  fi

  # Run via screen as correct user
  # CRITICAL FIX: --listening 127.0.0.1 forces IPv4 binding, avoiding IPv6 zombie conflicts
  screen -dmS "$SERVICE_NAME" su - {{ iiab_admin_user }} -c "\
    export NODE_PATH={{ rapidpro_dir }}/node_modules:/usr/lib/node_modules; \
    exec $DYNALITE_BIN --port 4567 --listening 127.0.0.1 --path {{ rapidpro_dir }}/dynamo >>\"$LOGFILE\" 2>&1"
  
  # Stabilization Loop
  for i in $(seq 1 5); do
      sleep 1
      if running; then
          pgrep -u "{{ iiab_admin_user }}" -f "dynalite" > "$PIDFILE" 2>/dev/null || true
          echo "[pdsm:$SERVICE_NAME] started"
          return 0
      fi
  done

  echo "[pdsm:$SERVICE_NAME] failed to start" >&2
  screen -X -S "$SERVICE_NAME" quit >/dev/null 2>&1 || true
  return 1
}

stop() {
  if ! running; then
    echo "[pdsm:$SERVICE_NAME] already stopped"
    return 0
  fi

  echo "[pdsm:$SERVICE_NAME] stopping..."
  
  pid="$(cat "$PIDFILE" 2>/dev/null)"
  [ -n "$pid" ] && kill "$pid" 2>/dev/null
  
  for i in $(seq 1 3); do
      if ! running; then break; fi
      sleep 1
  done
  
  screen -X -S "$SERVICE_NAME" quit >/dev/null 2>&1 || true
  pkill -f "dynalite" >/dev/null 2>&1 || true
  rm -f "$PIDFILE"
  
  echo "[pdsm:$SERVICE_NAME] stopped"
  return 0
}

status() {
  if running; then
    echo "[pdsm:$SERVICE_NAME] running"
    return 0
  fi
  echo "[pdsm:$SERVICE_NAME] not running"
  return 3
}

case "$1" in
  start|stop|restart|status) "$1" ;;
  *) echo "Usage: $0 {start|stop|restart|status}" >&2; exit 1 ;;
esac
